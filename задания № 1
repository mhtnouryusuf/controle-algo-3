#include <iostream>
using namespace std;

int main() {
    // Tableau de données directement intégré
    int tab[] = {8, 3, 5, 1, 9, 2, 7};
    int n = sizeof(tab) / sizeof(tab[0]); // Calcul de la taille du tableau

    cout << "Tableau avant tri :" << endl;
    for (int i = 0; i < n; i++) {
        cout << tab[i] << " ";
    }
    cout << endl;

    // Tri à bulle (ordre croissant)
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (tab[j] > tab[j + 1]) {
                int temp = tab[j];
                tab[j] = tab[j + 1];
                tab[j + 1] = temp;
            }
        }
    }

    cout << "\nTableau trie en ordre croissant :" << endl;
    for (int i = 0; i < n; i++) {
        cout << tab[i] << " ";
    }
    cout << endl;

    return 0;
}